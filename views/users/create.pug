extends ../layout/common.pug
block content
    h1 Create a new user
    if errors
        each error in errors
            .alert.alert-danger= error
    form(action="/users/create", method="POST", enctype="multipart/form-data")
        div
            label(for="name") Name
            input(type="text", name="name", id="name", value=values ? values.name : '')
        div    
            label(for="phone") Phone
            input(type="text", name="phone", id="phone", value=values ? values.phone : '')
        div
            label(for="avatar") Avatar
            input(type="file", name="avatar")
        button Create